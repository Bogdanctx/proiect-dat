@model proiect_daw.Models.GroupMessage

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0">Edit Comment</h2>
        </div>
        <div class="card-body p-4">
            <form method="post" asp-action="EditComment" asp-controller="Groups">
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="mb-4">
                    <label for="commentContent" class="form-label">Edit Your Comment</label>
                    <textarea id="commentContent" name="Content" class="form-control form-control-lg" rows="5" placeholder="Write your updated comment here...">@Model.Content</textarea>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success btn-lg w-45">
                        <span class="transition"></span>
                        <span class="gradient"></span>
                        <span class="label">

                            <i class="bi bi-save"></i> Save Changes</span>
                    </button>
                    <a asp-action="Show" asp-controller="Groups" asp-route-id="@Model.GroupId" class="btn btn-secondary btn-lg w-45">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
