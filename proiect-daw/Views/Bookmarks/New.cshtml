@model proiect_daw.Models.Bookmark

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card shadow-sm border-0 rounded-3 p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center mb-4 text-primary">Adaugare Bookmark</h2>

        <form asp-action="New" asp-controller="Bookmarks" method="post">
            <!-- Name Field -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">Denumire Colectie</label>
                <input asp-for="Name" class="form-control shadow-sm" placeholder="Introdu denumirea colectiei" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary w-100 py-2">
                    <i class="bi bi-plus-circle"></i> Adauga Bookmark
                </button>
            </div>
        </form>
    </div>
</div>

