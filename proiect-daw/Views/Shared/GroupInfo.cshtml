@model proiect_daw.Models.Group

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card shadow-sm border-0">
                <div class="row g-0 align-items-center">
                    <!-- Group Photo -->
                    <div class="col-md-4">
                        <img src="@Url.Content(Model.GroupPhoto)" alt="Group Photo" class="img-fluid rounded-start" style="max-height: 200px; object-fit: cover;" />
                    </div>

                    <!-- Post Body -->
                    <div class="col-md-8">
                        <div class="card-body">
                            <h4 class="fw-bold">@Model.Name</h4>
                            <h5>@Html.Raw(Model.Description)</h5>
                            <p>Moderator: @Model.ModeratorName</p>
                        </div>

                        <div class="card-footer bg-white d-flex justify-content-between align-items-center">
                            <small class="text-muted">Created on @Model.Date.ToString("MMMM dd, yyyy")</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
