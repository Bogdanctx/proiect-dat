@model proiect_daw.Models.Group

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card shadow-sm border-0">
                <!-- Post Body -->
                <div class="card-body">
                    <h4 class="fw-bold">@Model.Name</h4>
                    <h5>@Html.Raw(Model.Description)</h5>
                    <p>Moderator: @Model.ModeratorName</p>
                </div>

                <!-- Post Footer -->
                <div class="card-footer bg-white d-flex justify-content-between align-items-center">
                    <div>
                        <button class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-person-add"></i> Join
                        </button>
                    </div>
                    <small class="text-muted">Created on @Model.Date.ToString("MMMM dd, yyyy")</small>
                </div>
            </div>
        </div>
    </div>
</div>
