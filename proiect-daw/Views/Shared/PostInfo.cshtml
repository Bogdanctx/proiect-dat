@model proiect_daw.Models.Post

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card shadow-sm border-0">
                <!-- Post Header -->
                <div class="card-header bg-white d-flex align-items-center">
                    <img src="@Model.User?.ProfilePhoto" alt="@Model.User?.UserName's profile picture" class="rounded-circle me-3" width="50" height="50">
                    <div>
                        <strong>@Model.User?.UserName</strong> <!-- Replace with dynamic user name -->
                        <small class="text-muted d-block">@Model.Date.ToString("MMMM dd, yyyy HH:mm")</small> <!-- Dynamic formatted date -->
                    </div>
                </div>

                <!-- Post Body -->
                <div class="card-body">
                    <h5 class="fw-bold">@Model.Title</h5>
                    <p>@Html.Raw(Model.Content)</p>
                    <div>
                        @if (Model.Category != null)
                        {
                            <span class="badge bg-secondary"><i class="bi bi-globe"></i> @Model.Category.CategoryName</span>
                        }
                    </div>
                </div>

                <!-- Post Footer -->
                <div class="card-footer bg-white d-flex justify-content-between align-items-center">
                    <div>
                        <form method="post" asp-controller="Posts" asp-action="ToggleLike">
                            <input type="hidden" name="PostId" value="@Model.Id" />
                            <input type="hidden" name="UserId" value="@ViewBag.UserCurent" />
                            <button class="btn btn-sm @(Model.Likes != null && Model.Likes.Any(l => l.UserId == ViewBag.UserCurent) ? "btn-primary" : "btn-outline-primary")" type="submit">
                                <i class="bi bi-hand-thumbs-up"></i> @(Model.Likes != null && Model.Likes.Any(l => l.UserId == ViewBag.UserCurent) ? "Unlike" : "Like") (@Model.LikesCount)
                            </button>
                        </form>
                        <a href="@Url.Action("Show", "Posts", new { id = Model.Id })#commentForm" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-chat"></i> Comment
                        </a>
                        <button id="shareButton" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-share"></i> Share
                        </button>
                    </div>
                    <small class="text-muted">Posted on @Model.Date.ToString("MMMM dd, yyyy")</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Animate.css for Animations -->
<script>
    document.getElementById('shareButton').addEventListener('click', function () {
        var url = window.location.href;
        navigator.clipboard.writeText(url).then(function () {
            alert('URL copied to clipboard');
        }, function (err) {
            console.error('Could not copy text: ', err);
        });
    });
</script>
