<body>
    <link href="~/css/antimation.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <div class="d-flex align-items-center justify-content-center vh-100">
        <div class="container text-center">
            <div class="row justify-content-center align-items-center">

                <!-- Text Column -->
                <div class="col-12 col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h2 class="card-title mb-4">Welcome Back!</h2>

                            <!-- Login Button -->
                            <button id="login" type="submit" class="btn btn-primary btn-lg btn-block mb-3">
                                <span class="transition"></span>
                                <span class="gradient"></span>
                                <span class="label"><i class="bi bi-box-arrow-in-right"></i> Login</span>
                            </button>

                            <!-- Subtitle -->
                            <p class="text-muted my-2">Don’t have an account? <a style="cursor: pointer;" id="register" class="text-primary">Register</a></p>

                             </div>
                    </div>
                </div>

                <!-- Image Column -->
                <div class="col-12 col-md-6">
                    <img src="~/assets/welcome.svg" alt="Welcome Image" class="img-fluid rounded mb-4" />
                </div>

            </div>
        </div>

        <script>
            const button1 = document.getElementById('login');
            const button2 = document.getElementById('register');
            const registerLink = document.getElementById('register-link');

            button1.addEventListener('click', () => {
                window.location.href = 'Identity/Account/Login';
            });

            button2.addEventListener('click', () => {
                window.location.href = 'Identity/Account/Register';
            });

            registerLink.addEventListener('click', () => {
                window.location.href = 'Identity/Account/Register';
            });
        </script>
    </div>
</body>
