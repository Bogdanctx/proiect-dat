@model proiect_daw.Models.Post

<h2 class="text-center mt-5">Editare</h2>

<br />

<link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.js"></script>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">

            <form method="post" asp-action="Edit" asp-controller="Posts" asp-route-id="@Model.Id">
                <!-- Validation Summary -->
                <div asp-validation-summary="All" class="text-danger"></div>

                <!-- Title Field -->
                <div class="form-group">
                    <label asp-for="Title" class="form-label">Titlu</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <br />

                <!-- Content Field with Quill -->
                <div class="form-group">
                    <label asp-for="Content" class="form-label">Continut</label>
                    <div id="editor">{!! Model.Content !!}</div>
                    <textarea id="Content" name="Content" style="display:none;"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <br />

             

                <br />

                <!-- Submit Button -->
                <button class="btn btn-sm btn-success" type="submit">
                    Modify
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    // Initialize Quill editor
    const quill = new Quill('#editor', {
        theme: 'snow',
        placeholder: 'Edit your content...',
        modules: {
            toolbar: [
                [{ 'header': '1' }, { 'header': '2' }, { 'header': '3' }, { 'font': [] }, { 'size': ['small', false, 'large', 'huge'] }],
                [{ 'list': 'ordered' }, { 'list': 'bullet' }],
                ['bold', 'italic', 'underline', 'strike'],
                ['link', 'image', 'video'],
                ['clean']
            ]
        }
    });

    // Pre-fill the Quill editor with the existing content
    quill.root.innerHTML = `{!! Model.Content !!}`;

    // Update the hidden textarea with Quill content on change
    quill.on('text-change', function () {
        document.querySelector('textarea[name="Content"]').value = quill.root.innerHTML;
    });
</script>
