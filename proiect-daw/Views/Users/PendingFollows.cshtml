@model IEnumerable<proiect_daw.Models.FollowRequest>

<div class="container mt-4">
    <h3>Pending Follow Requests</h3>
    <hr />
    @if (!Model.Any())
    {
        <p class="text-muted">You have no pending follow requests.</p>
    }
    else
    {
        <div class="list-group">
            @foreach (var request in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">@request.Sender.UserName</h5>
                        <p class="mb-0 text-muted">@request.Sender.Email</p>
                    </div>
                    <div>
                        <form asp-controller="Users" asp-action="AcceptFollowRequest" method="post" asp-route-requestId="@request.Id" class="d-inline">
                            <button type="submit" class="btn btn-success">Accept</button>
                        </form>
                        <form asp-controller="Users" asp-action="DeclineFollowRequest" method="post" asp-route-requestId="@request.Id" class="d-inline">
                            <button type="submit" class="btn btn-danger">Decline</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
</div>
